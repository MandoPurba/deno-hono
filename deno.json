{
    "imports": {
        "hono": "jsr:@hono/hono@^4.6.10",
        "mongodb": "npm:mongodb@^6.10.0",
        "zod": "https://deno.land/x/zod@v3.23.8/mod.ts"
    },
    "tasks": {
        "start": "deno run -ERNS --env --watch main.ts"
    },
    "compilerOptions": {
        "jsx": "precompile",
